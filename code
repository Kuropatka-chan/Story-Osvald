        }

        #joystickBase {
            width: 150px;
            height: 150px;
            background-color: rgba(148, 163, 184, 0.18);
            border: 2px solid rgba(255, 255, 255, 0.25);
            border-radius: 50%;
            position: relative;
            pointer-events: auto;
            touch-action: none;
            box-shadow: inset 0 0 16px rgba(15, 23, 42, 0.6);
        }

        #joystickBase.active {
            border-color: rgba(148, 197, 255, 0.6);
            box-shadow: inset 0 0 22px rgba(37, 99, 235, 0.55);
        }

        #joystickHandle {
            width: 70px;
            height: 70px;
            border-radius: 50%;
            background: radial-gradient(circle at 30% 30%, rgba(96, 165, 250, 0.85), rgba(37, 99, 235, 0.75));
            border: 2px solid rgba(255, 255, 255, 0.45);
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            transition: transform 0.08s ease-out;
            box-shadow: 0 0 14px rgba(59, 130, 246, 0.35);
        }

        #screen {
            position: absolute;
